    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"></style>

    <style name="login_edit_text_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/editText_padding</item>
        <item name="android:paddingRight">@dimen/editText_padding</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/editText_padding</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">@dimen/editText_size</item>
        <item name="android:textColorHint">@color/edit_text_color</item>
    </style>

    <style name="login_button_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_login_size</item>
    </style>


